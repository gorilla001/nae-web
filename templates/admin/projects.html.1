<html>
<head>
   <title>Home页面</title>
   <!--<link href="http://libs.baidu.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
   <script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
   <script src="http://libs.baidu.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>-->
   <link href="/static/css/bootstrap.css" rel="stylesheet">
   <link href="/static/css/bootstrap.min.css" rel="stylesheet">
   <link href="/static/css/dashboard.css" rel="stylesheet">

   <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
   <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>

<body> 
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">		
            <div class="navbar-header">
                <!--<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>-->
                <span class="navbar-brand">聚美优品JAE平台</span>
            </div>
            <ul class="nav navbar-right top-nav">
            </ul>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="active" >
                        <a href="/admin/projects"><i class="fa fa-fw fa-dashboard"></i>项目管理</a>
                    </li>
                    <li>
                        <a href="/admin/images"><i class="fa fa-fw fa-bar-chart-o"></i> 镜像管理</a>
                    </li>
                    <li>
                        <a href="/admin/users"><i class="fa fa-fw fa-table"></i> 用户管理</a>
                    </li>
                </ul>
            </div>
        </nav>
         <div id="page-wrapper">
            <div class="container-fluid">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="btn-group btn-group-sm pull-right">
                            <button class="btn btn-primary" data-toggle="modal" data-target="#largeModal">创建</button>
                       </div>
                    </div>
                </div>

                <div id="largeModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h4 class="modal-title">创建项目</h4>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal" action="/containers" method="POST" >
                                   <div class="control-group name">
                                      <label cass="control-label" for="name">项目名称</label>
                                      <div class="controls">
                                        <input type="text" class="form-control" id="name" placeholder="项目名称">
                                        <span class="help-inline">(*)</span>
                                      </div>
                                    </div>
                                    <div class="control-group environ">
                                      <label class="control-label" for="environ">镜像</label>
                                      <div class="controls">
                                          <select  class="form-control" id="environ">  
                                            <option>容器环境</option>  
                                            <option>开发环境</option>  
                                            <option>测试环境</option>  
                                            <option>Staging环境</option>  
                                            <option>Publish环境</option>  
                                            <option>生产环境</option>  
                                          </select>
                                          <span class="help-inline">(容器的环境，比如开发、测试等)</span>
                                      </div>  
                                    </div>
                                    <div class="control-group project">
                                      <label class="control-label" for="project">所属项目</label>
                                      <div class="controls">
                                          <select class="form-control">  
                                            <option>项目名称</option>  
                                            <option>项目一</option>  
                                            <option>项目二</option>  
                                            <option>项目三</option>  
                                            <option>项目四</option>  
                                          </select>  
                                        <span class="help-inline">(容器所属的项目，比如optool项目)</span>
                                      </div>
                                    </div>

                                    <div class="control-group version">
                                      <label class="control-label" for="version">代码版本库</label>
                                      <div class="controls">
                                          <select class="form-control">  
                                            <option>代码版本库</option>  
                                            <option>分支一</option>  
                                            <option>分支二</option>  
                                            <option>分支三</option>  
                                            <option>分支四</option>  
                                          </select>  
                                        <span class="help-inline">(需要测试的代码分支)</span>
                                      </div>
                                    </div>
                                </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                            <button type="submit" class="btn btn-primary" data-dismiss="modal">确定</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                    <table class="table table-striped table-bordered table-hover table-condensed">
                        <thead>
                            <th>项目ID</th>
                            <th>项目名称</th>
                            <th>项目描述</th>
                            <th>创建时间</th>
                            <th>镜像</th>
                            <th>管理员</th>
                            <th>项目成员</th>
                        </thead>
                        <tbody>
                            {% for item in projects_list %}
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            {% endfor %} 
                        </tbody>
                    </table>
             </div>
        </div>
    <script src="/static/js/bootstrap.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
</body>
</html>
